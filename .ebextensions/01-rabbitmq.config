commands:
  01_run_rabbitmq:
    command: "docker run -d --name rabbitmq -p 5672:5672 -p 15672:15672 -p 61613:61613 --restart=unless-stopped -e RABBITMQ_DEFAULT_USER=shjid -e RABBITMQ_DEFAULT_PASS=shjpw rabbitmq:management"
    test: "[[ ! $(docker ps -q -f name=rabbitmq) ]]"
  02_enable_rabbitmq:
    command: "docker exec rabbitmq bash -c 'rabbitmq-plugins enable rabbitmq_stomp && rabbitmq-plugins enable rabbitmq_management'"